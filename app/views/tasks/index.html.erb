<div class="col-md-2"></div>
<div class="col-md-8">

  



  <table>
    <thead>
      <tr>
        <%unless @tasks.size==0%>
          <th colspan="6"><h2>Tasks</h2></th>
        <%end%>
        <th colspan="3"><%= link_to 'New Task', new_task_path ,class:"btn btn-warning"%></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        
      </tr>
      <%if @tasks.size== 0%>
        <p>Currently there are no tasks created by you , click on New task to create one!</p>
      <%end%>
      <% @tasks.reverse.each do |task| %>
       <!-- <p>current user:  current_user.id%></p><br>
        <p>task user id:  task.user_id%></p><br>-->
        
         
            
               <tr class="status-row">
            
                  <td colspan="6"><li class="status"><%= task.status%></li></td>
                  
                  <td colspan="2"><%= link_to 'Show', task %></td>
                  <td colspan="2"><%= link_to 'Edit', edit_task_path(task) %></td>
                  <td colspan="2"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               </tr>
              
       
      <% end %>
    </tbody>
  </table>

  <br>

 
</div>
<div class="col-md-2"></div>
      