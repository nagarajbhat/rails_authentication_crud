<div class="col-md-4"></div>
<div class="col-md-4">
	<h1>Sign up</h1>

		<%= form_for @user do |f| %>
			<%if @user.errors.any?%>
				<div clsss="error_messages">
					<h2>Form is invalid</h2>
					<ul>
						<% @user.errors.full_messages.each do |message|%>
						<li><%= message %></li>
						<%end%>
					</ul>
				</div>
			<%end%>

		    <%= f.text_field :first_name, :placeholder => "First name",class:"formboxes"%><br>
		    <%= f.text_field :last_name, :placeholder => "Last name" ,class:"formboxes"%><br>
		    <%= f.email_field :email, :placeholder => "Email",id:"mail" ,class:"formboxes"%><br>
		    <%= f.password_field :password, :placeholder => "Password" ,class:"formboxes"%><br>
		    <%= f.submit "Create an account", class: "btn btn-success" %><br>
	    <% end %>

</div>
<div class="col-md-4"></div>
			
